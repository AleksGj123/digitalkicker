#@mainLayout()
    <style>
        .table {
            border-spacing:5px; /* need some space ?*/
            display:table;
            table-layout:fixed;
            width:100%;
        }
        .table div {
            display:table-cell;
        }
        img {
            width:100%;
        }
    </style>
<div class="new-match-carousel carousel fade-carousel slide" data-ride="carousel" data-interval=false id="bs-carousel">

    <ol class="carousel-indicators">
        <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#bs-carousel" data-slide-to="1"></li>
        <li data-target="#bs-carousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
        <div class="item slides active">
            <div class="slide-1"></div>
            <div class="hero">
                <hgroup>
                    <h1>Choose your Season</h1>
                    <div class="season-selection-box">
                        #foreach($season in $seasons)
                            <p class="season-selection">$season</p>
                        #end
                    </div>
                </hgroup>
            </div>
        </div>
        <div class="item slides">
            <div class="slide-2"></div>
            <div class="hero">
                <hgroup>
                    <h1>Choose your match type</h1>
                    <div class="match-type-selection-box">
                        <img src="https://yt3.ggpht.com/a-/AK162_7qutgNe-gMFOEau_V4Sk5GAue8N8E45Lm7EA=s900-mo-c-c0xffffffff-rj-k-no">
                        <img src="https://yt3.ggpht.com/a-/AK162_7qutgNe-gMFOEau_V4Sk5GAue8N8E45Lm7EA=s900-mo-c-c0xffffffff-rj-k-no">
                        <img src="https://yt3.ggpht.com/a-/AK162_7qutgNe-gMFOEau_V4Sk5GAue8N8E45Lm7EA=s900-mo-c-c0xffffffff-rj-k-no">
                    </div>
                </hgroup>
            </div>
        </div>
        <div class="item slides">
            <div class="slide-3"></div>
            <div class="hero">
                <hgroup>
                    <h1>Select players</h1>
                    <div class="players-selection-box">
                        <div class="table ">
                            <div>
                                <img src="https://yt3.ggpht.com/a-/AK162_7qutgNe-gMFOEau_V4Sk5GAue8N8E45Lm7EA=s900-mo-c-c0xffffffff-rj-k-no" />
                            </div>
                            <div>
                                <img src="https://yt3.ggpht.com/a-/AK162_7qutgNe-gMFOEau_V4Sk5GAue8N8E45Lm7EA=s900-mo-c-c0xffffffff-rj-k-no" />
                            </div>
                            <div>
                                <img src="https://yt3.ggpht.com/a-/AK162_7qutgNe-gMFOEau_V4Sk5GAue8N8E45Lm7EA=s900-mo-c-c0xffffffff-rj-k-no" />
                            </div>
                            <div>
                                <img src="https://yt3.ggpht.com/a-/AK162_7qutgNe-gMFOEau_V4Sk5GAue8N8E45Lm7EA=s900-mo-c-c0xffffffff-rj-k-no" />
                            </div>
                        </div>
                    </div>
                </hgroup>
            </div>
        </div>
    </div>
    <a class="carousel-control left" href="#bs-carousel" data-slide="prev"></a>
    <a class="carousel-control right" href="#bs-carousel" data-slide="next"></a>
</div>
#end