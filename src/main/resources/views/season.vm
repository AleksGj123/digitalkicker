<html>


<html lang="en">


    #include("/views/layout.vm")


    <script>
        $(document).ready(function(){
            var date_input=$('input[name="$fields.start.name"]');
            var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
            var options={
                format: 'dd/mm/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            };
            date_input.datepicker(options);

            var date_input2=$('input[name="$fields.end.name"]');
            var container2=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
            var options2={
                format: 'dd/mm/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            };
            date_input2.datepicker(options2);
        })
    </script>
    <body>
        <div class="container container-aa">
            <div class="container container-a">

                #set($fields = $seasonForm.fields)

                #set($validationInfos = $seasonForm.validationResult.fieldMessages)
                #if($validationInfos.size() > 0)
                    #foreach($validationInfo in $validationInfos)
                        <div class="alert alert-danger" role="alert">
                            <strong>Oh snap!</strong> Change a few things up and try submitting again. + $validationInfo
                        </div>
                    #end
                #end
                <div class="col-lg-6">
                    <form action="/player" method="post">

                        <div class="form-group">
                            <label for="$fields.name.name">Season-name:</label>
                            <input type="text" class="form-control"
                                   id="$fields.name.name"
                                   name="$fields.name.name"
                                   value="$fields.name.value"
                                   placeholder="Super Season">
                        </div>

                        <div class="input-group date">
                            <label class="control-label" for="$fields.start.name">Start-date</label>
                            <input class="form-control" id="$fields.start.name" value="$fields.start.value" name="$fields.start.name" placeholder="MM/DD/YYY" type="text"/>
                        </div>
                        <div class="input-group date">
                            <label class="control-label" for="$fields.start.name">End-date</label>
                            <input class="form-control" id="$fields.end.name" value="$fields.start.value" name="$fields.end.name" placeholder="MM/DD/YYY" type="text"/>
                        </div>

                        <br>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

        </div>
    </body>

</html>