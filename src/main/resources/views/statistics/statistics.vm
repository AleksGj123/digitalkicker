#@mainLayout()
<div class="container container-aa">
    <div class="container container-a">
        <form action="/stats" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <select class="form-control" id="season" name="season">
                        #foreach($season in $seasons)
                            <option value="$season.id" #if($season.id == $currentSeason.id)selected#{end}>$season.name</option>
                        #end
                    </select>
                </div>
            </div>
            <div class="form-group col-md-8">
                <button type="submit" id="buttonUpload" class="btn btn-primary">Show</button>
            </div>
        </form>

    </div>
</div>

<div class="container">
    <div class="row">
        <div class="cold-md-12">
            <h4>You'll need at least $minimumMatches matches to enable player statistics.</h4>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Matches played</h3>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Forename</th>
                    <th>Nickname</th>
                    <th>Surname</th>
                    <th>Matches</th>
                </tr>
                </thead>
                <tbody>
                    #foreach($stats in $numberOfGamesList)
                    <tr>
                        <td>$stats.key.forename</td>
                        <td>$stats.key.nickname</td>
                        <td>$stats.key.surname</td>
                        #if ($stats.value > $minimumMatches)
                            <td>$stats.value</td>
                        #else
                            <td>$stats.value (ignored)</td>
                        #end
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h3>Matches won</h3>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Forename</th>
                    <th>Nickname</th>
                    <th>Surname</th>
                    <th>Matches won</th>
                </tr>
                </thead>
                <tbody>
                    #foreach($stats in $wonMatches)
                    <tr>
                        <td>$stats.key.forename</td>
                        <td>$stats.key.nickname</td>
                        <td>$stats.key.surname</td>
                        <td>$percentageFormat.format($stats.value)</td>
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
    </div>
</div>
